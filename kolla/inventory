# OpenStack Lab - Kolla-Ansible Multinode Inventory
# node1: Controller + Network + Monitoring
# node2: Compute
# node3: Storage (Cinder)

[control]
node1 ansible_host=192.168.105.10

[network]
node1 ansible_host=192.168.105.10

[compute]
node2 ansible_host=192.168.105.11

[monitoring]
node1 ansible_host=192.168.105.10

[storage]
node3 ansible_host=192.168.105.12

[deployment]
localhost ansible_connection=local

# Connection defaults for all nodes
[all:vars]
ansible_user=root
ansible_ssh_private_key_file=/Users/eevenson/Documents/Projects/openstack/lima/openstack-lab
ansible_ssh_common_args='-o StrictHostKeyChecking=no'

# Per-node interface overrides (nodes have different interface counts)
[compute:vars]
tunnel_interface=lima1
storage_interface=lima2

[storage:vars]
storage_interface=lima1

